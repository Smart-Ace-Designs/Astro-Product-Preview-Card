---
import MainLayout from "@/layouts/MainLayout.astro";
import Image from "astro/components/Image.astro";

import imageMobile from "@/assets/image-product-mobile.jpg";
import imageDesktop from "@/assets/image-product-desktop.jpg";

import cart from "@/assets/icon-cart.svg";
---

<MainLayout title="Frontend Mentor | Product Preview Card">
  <div
    class="mx-auto mt-7 w-[360px] overflow-hidden rounded-lg bg-secondaryWhite md:mt-20 md:grid md:w-[600px] md:grid-cols-2"
  >
    <Image src={imageMobile} alt="Parfum" loading={"eager"} class="md:hidden" />
    <Image
      src={imageDesktop}
      alt="Parfum"
      loading={"eager"}
      class="hidden md:block md:h-full"
    />
    <section class="px-8 py-6">
      <p
        class="mb-3 font-montserrat text-xs uppercase tracking-[.35rem] text-secondaryDarkGrayishBlue"
      >
        Perfume
      </p>
      <h1
        class="mb-4 font-fraunces text-[2rem] font-semibold leading-none text-secondaryVeryDarkBlue"
      >
        Gabrielle Essence Eau De Parfum
      </h1>
      <p class="mb-7 text-sm text-secondaryDarkGrayishBlue">
        A floral, solar and voluptuous interpretation composed by Olivier Polge,
        Perfumer-Creator for the House of CHANEL.
      </p>
      <div class="mb-5 flex items-center">
        <p class="mr-4 font-fraunces text-3xl text-primaryDarkCyan">$149.99</p>
        <p class="text-xs text-secondaryDarkGrayishBlue">$169.99</p>
      </div>

      <div
        class="flex items-center justify-center rounded-md bg-primaryDarkCyan py-4"
      >
        <a href="/" class="font-montserrat text-sm text-secondaryWhite"
          ><span
            ><Image src={cart} alt="Shoping Cart" class="mr-2 inline" /></span
          >
          Add to Cart</a
        >
      </div>
    </section>
  </div>
</MainLayout>
